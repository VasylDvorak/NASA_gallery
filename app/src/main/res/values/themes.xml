<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeNASAgallery" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="myColor">@color/indigo_light</item>
        <item name="colorPrimary">@color/pink_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/one</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?myColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/pink_light</item>
        <item name="rippleColor">@color/red</item>
        <item name="colorOnSurfaceVariant">@color/material_dynamic_primary60</item>
        <item name="strokeColor">@color/red</item>
        <item name="textAppearanceBody2">@style/MyTextAppearanceBody2</item>
        <item name="textAppearanceLabelLarge">@style/MyTextAppearanceBody2</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationView</item>
        <item name="materialCardViewStyle">@style/MyCardViewStyle</item>


    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">30dp</item>
        <item name="shapeAppearance">@style/MyShapeAppearanceMediumComponent</item>
    </style>

    <style name="MyBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/MyActiveIndicatorStyle</item>

    </style>


    <style name="MyActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="android:color">@color/teal_700</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="animationMode">slide</item>
        <!--        <item name="tabIndicatorColor">@color/colorAccent</item>-->

    </style>


    <style name="MyTextAppearanceBody2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/russo_one</item>
        <item name="android:fontFamily">@font/amita</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="MyShapeAppearanceSmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">30dp</item>
        <item name="cornerFamily">rounded</item>

    </style>

    <style name="MyShapeAppearanceMediumComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>

    </style>


    <style name="MyChipStile" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">?android:attr/colorMultiSelectHighlight</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/red</item>
        <item name="android:textAppearance">@style/MyTextAppearanceBody2</item>
        <item name="shapeAppearance">@style/MyShapeAppearanceSmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearanceSmallComponent</item>
    </style>

    <style name="MyTextInputLayoutStile" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">@color/green</item>
    </style>

    <style name="Widget.MaterialComponents.ExtendedFloatingActionButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="backgroundTint">@color/four</item>
        <item name="elevation">@dimen/fab_margin</item>
        <item name="iconTint">@color/one</item>
        <item name="rippleColor">@color/red</item>
        <item name="shapeAppearanceCornerLarge">@color/red</item>
    </style>

    <style name="PinkTheme" parent="ThemeNASAgallery">
        <item name="myColor">@color/pink_light</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/pink_light</item>
        <item name="bottomAppBarStyle">@style/MyAppBarStylePink</item>
    </style>

    <style name="IndigoTheme" parent="ThemeNASAgallery">
        <item name="myColor">@color/indigo_light</item>
        <item name="colorPrimaryVariant">@color/indigo_dark</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/indigo_dark</item>
        <item name="colorOnSecondary">@color/one</item>
        <item name="bottomAppBarStyle">@style/MyAppBarStyleIndigo</item>
    </style>

    <style name="RedTheme.PinkTheme" parent="ThemeNASAgallery">
        <item name="myColor">@color/three</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorSecondary">@color/color1</item>
        <item name="colorSecondaryVariant">@color/color2</item>
        <item name="colorOnSecondary">@color/color3</item>
        <item name="bottomAppBarStyle">@style/MyAppBarStyleRed</item>
    </style>

    <style name="MyAppBarStylePink" parent="@style/Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/pink</item>
    </style>

    <style name="MyAppBarStyleIndigo" parent="@style/Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/indigo</item>
    </style>

    <style name="MyAppBarStyleRed" parent="@style/Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/color4</item>
    </style>

</resources>