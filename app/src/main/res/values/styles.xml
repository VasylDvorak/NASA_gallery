<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyChipStile" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">?android:attr/colorMultiSelectHighlight</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/red</item>
        <item name="android:textAppearance">@style/MyTextAppearanceBody2</item>
        <item name="shapeAppearance">@style/MyShapeAppearanceSmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearanceSmallComponent</item>
    </style>
    <style name="MyTextInputLayoutStile" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">@color/purple_100</item>
    </style>

    <style name="ThemeNASAgallery.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeNASAgallery.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTextAppearanceBody2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/russo_one</item>
        <item name="android:fontFamily">@font/amita</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

</resources>